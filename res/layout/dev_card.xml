<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="4dip"
    android:paddingTop="4dip" >

    <RelativeLayout
        android:id="@+id/image_here"
        android:layout_width="wrap_content"
        android:layout_height="250dip"
        android:gravity="center_vertical"
        android:background="@drawable/card_selector"
        android:orientation="vertical"
        android:duplicateParentState="true">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="5dp"
            android:paddingLeft="3dip"
            android:paddingRight="3dip" />

        <LinearLayout
            android:id="@+id/twitter_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/photo"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:layout_marginLeft="6dp"
                android:textAppearance="@style/TextAppearance.Name"
                android:layout_below="@+id/photo"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/gplus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo"
                android:layout_toRightOf="@+id/name"
                android:src="@drawable/gplus_red"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside" />

        </LinearLayout>

        <ImageView
            android:id="@+id/anchor"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/card_menu_button"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignBottom="@+id/twitter_name"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</FrameLayout>




